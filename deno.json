{
  "tasks": {
    "dev": "deno run --allow-ffi --allow-env --allow-read --allow-write --allow-net --allow-sys --watch ./src/main.ts"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "class-transformer": "npm:class-transformer@^0.5.1",
    "class-validator": "npm:class-validator@^0.14.1",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2",
    "sqlite3": "npm:sqlite3@^5.1.7",
    "typedi": "npm:typedi@^0.10.0",
    "typeorm": "npm:typeorm@^0.3.20"
  },
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "require-await"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100
  }
}